# Uncomment and update the password and secret key.
# PG_PASS=change-me
# AUTHENTIK_SECRET_KEY=change-me

# Enable error reporting
AUTHENTIK_ERROR_REPORTING__ENABLED=true

# Postgres configuration
PG_USER=authentik
PG_DB=authentik

# Authentik data volume path
AUTHENTIK_DATA_VOLUME=/tank/docker/data/authentik

# SMTP Host (Gmail's server)
AUTHENTIK_EMAIL__HOST=smtp.gmail.com

# Gmail SMTP port for STARTTLS (recommended)
AUTHENTIK_EMAIL__PORT=587

# Gmail login username (your full Gmail address)
AUTHENTIK_EMAIL__USERNAME=youraddress@gmail.com

# Gmail app-specific password (NOT your normal password)
AUTHENTIK_EMAIL__PASSWORD=your_app_password_here

# Use StartTLS
AUTHENTIK_EMAIL__USE_TLS=true

# Use SSL (disable since using TLS on port 587)
AUTHENTIK_EMAIL__USE_SSL=false

# Timeout in seconds
AUTHENTIK_EMAIL__TIMEOUT=10

# "From" address shown in the email
AUTHENTIK_EMAIL__FROM=authentik@gmail.com